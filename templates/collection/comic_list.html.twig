{% extends 'base.html.twig' %}

{% block body %}

	{% include "partials/header.html.twig" %}

	{% include "partials/dropdown_btn.html.twig" %}

	<section class="container-custom--cat">

		<div class="row">

			{% for comic in comicList %}
				<div class="col-md-3 d-flex">


					<div class="col-md-6 cover">
						<img src={{ asset(vich_uploader_asset(comic, 'imageFile')) }}>
					</div>


					<div class="col-md-6 info">

						<div class="info info_author">{{comic.author}}</div>
						<div class="info info_title">{{comic.title}}</div>

						<div class="year_and_country d-flex">
							<div class="info info_country">{{comic.country}}
								/</div>
							<div class="info info_year">{{comic.year}}</div>
						</div>
						<div class="info info_genre">{{comic.genre}}</div>
						<div class="info info_isbn">ISBN
							{{comic.isbn}}
						</div>


						<div class="modif-bloc d-flex">

							<div class="modif modif-edit">

								<button class="modif-button">
									<a href="{{ path('app_edit_comic', {'user_id': app.user.id, 'comic_id': comic.id}) }}">
										<img src={{ asset ("../public/images/editer.png") }}>
									</a>
								</button>
							</div>

							<div class="modif modif-delete">

								<a href="{{ path('app_delete_comic', {'user_id': app.user.id, 'comic_id': comic.id}) }}"></a>

								{% include 'comic/deleteComicForm.html.twig' %}


							</div>


						</div>


					</div>
				</div>
			{% endfor %}

		</div>

	</section>


	{% include "partials/footer.html.twig" %}


{% endblock %}
